<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" href="/assets/styles/mystyle.css">
	</head>
	<body>
		<div class="text-center">
			<h1 class="header">User</h1>
		</div>
		<!--menu starts-->
		<div class="text-center">
			<a href="/user" class="btn btn-primary">Dashboard</a>
            <a href="/user/renthistory" class="btn btn-info">See Rental History</a>
            <a href="/user/profile" class="btn btn-info">Profile</a>
			<a href="/logout" class="btn btn-danger">Logout</a>
		</div>
		<div class="center">
            <h1 class="text text-center">Edit Profile</h1>
            <form action="" method="post" class="form-horizontal form-material">
                <div class="form-group">
                    <h4 class="text">Username</h4>
                    <input type="text" name="username" class="form-control" value="<%= username %>" readonly>
                </div>

                <div class="form-group">
                    <h4 class="text">Name</h4> 
                    <input type="text" name="name" class="form-control" value="<%= name %>">
                </div>

                <div class="form-group">
                    <h4 class="text">Password</h4> 
                    <input type="password" name="password" class="form-control" value="<%=password%>">
                </div>

                <div class="form-group">
                    <h4 class="text">Confirm Password</h4> 
                    <input type="password" name="cpassword" class="form-control" value="<%= password %>">
                </div>

                <div class="form-group">
                    <h4 class="text">Contact No</h4> 
                    <input type="text" name="contactno" class="form-control" value="<%= contactno %>">
                </div>
                
                <div class="form-group">
                    <h4 class="text">Address</h4> 
                    <input type="text" name="address" class="form-control" value="<%= address %>">
                </div>

                <div class="form-group text-center">
                    <a href="/admin/allcars" class="btn btn-warning" value="Cancel">Cancel</a>
                    <input type="submit" name="editcar" class="btn btn-success" value="Update Profile" class="form-control">
                    <a href="/admin/deletecar" class="btn btn-danger" value="Cancel">Cancel</a>
                </div>
            </form>
        </div>
        </div>		
	</body>
</html>