<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="/assets/styles/mystyle.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script type="text/javascript" src = "/assets/js/user.js"></script>
	</head>
	<body>
		<div class="text-center">
			<h1 class="header">Admin</h1>
		</div>
		<!--menu starts-->
		<div class="text-center">
			<a href="/Admin" class="btn btn-primary">Dashboard</a>
			<a href="/admin/allcars" class="btn btn-warning">All Cars</a>
			<a href="/admin/addnewcar" class="btn btn-danger">Add Car</a>
			<a href="/admin/allusers" class="btn btn-warning">All Users</a>
            <a href="/admin/addnewadmin" class="btn btn-info">Add New Admin</a>
            <a href="/admin/renthistory" class="btn btn-info">See Rent History</a>
            <a href="/admin/profile" class="btn btn-info">Profile</a>
			<a href="/logout" class="btn btn-danger">Logout</a>
        </div>
        
        <div class="center">
            <h1 class="text text-center">Add New Admin</h1>
            <form action="" method="post" class="form-horizontal form-material">
                <div class="form-group">
                    <h4 class="text">Username</h4>
                    <input type="text" id="username" name="username" class="form-control">
                    <span id="err_uname" style="color:red;"></span>
                </div>

                <div class="form-group">
                    <h4 class="text">Name</h4> 
                    <input type="text" name="name" class="form-control" >
                </div>

                <div class="form-group">
                    <h4 class="text">Password</h4> 
                    <input type="password" name="password" class="form-control">
                </div>

                <div class="form-group">
                    <h4 class="text">Confirm Password</h4> 
                    <input type="password" name="cpassword" class="form-control">
                </div>

                <div class="form-group">
                    <h4 class="text">Contact No</h4> 
                    <input type="text" id="contact" name="contactno" class="form-control">
                    <span id="err_contact" style="color:red;"></span>
                </div>
                
                <div class="form-group">
                    <h4 class="text">Address</h4> 
                    <input type="text" name="address" class="form-control">
                </div>

                <div class="form-group text-center">
                    
                    <input type="submit" name="addnewadmin" class="btn btn-success" value="Register New Admin" class="form-control">
                </div>
            </form>
        </div>   
	</body>
</html>