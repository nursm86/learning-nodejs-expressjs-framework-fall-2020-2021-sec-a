<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" href="/assets/styles/mystyle.css">
	</head>
	<body>
		<div class="text-center">
			<h1 class="header">Admin</h1>
		</div>
		<!--menu starts-->
		<div class="text-center">
			<a href="/Admin" class="btn btn-primary">Dashboard</a>
			<a href="/admin/allcars" class="btn btn-warning">All Cars</a>
			<a href="/admin/addnewcar" class="btn btn-danger">Add Car</a>
			<a href="/admin/allusers" class="btn btn-warning">All Users</a>
            <a href="/admin/addnewadmin" class="btn btn-info">Add New Admin</a>
            <a href="/admin/renthistory" class="btn btn-info">See Rent History</a>
            <a href="/admin/profile" class="btn btn-info">Profile</a>
			<a href="/logout" class="btn btn-danger">Logout</a>
		</div>
        <div class="center">
            <h3 class="text">Rental History</h3>
            <table class="table table-striped">
                <thead>
                    <td>Car</td>
                    <td>User's Name</td>
                    <td>Payment Method</td>
                    <td>Total Price</td>
                    <td>Renting Date</td>
                </thead>
                <tbody>
                    <% 
                        rents.forEach( function(std){ %>
                            <tr>
                                <td><%= std.carName %></td>
                                <td><%= std.name %></td>
                                <% if(std.p_method == 0){%>
                                    <td>Cash On Arrival</td>
                                <%}
                                else if(std.p_method == 1){%>
                                    <td>Bkash</td>
                                else if(std.p_method == 2){%>
                                    <td>Rocket</td>
                                <%}else {%>
                                    <td>Dutch Bangla Bank</td>
                                <%}%>
                                <td><%= std.tp %></td>
                                <td><%= std.rd %></td>
                            </tr>
        
                    <%
                        }); 
                    %>
                </tbody>
            </table>
        </div>	
	</body>
</html>